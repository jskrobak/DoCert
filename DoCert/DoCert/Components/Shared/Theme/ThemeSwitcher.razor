<HxSelect Label="Theme" 
          TItem="Theme"
          TValue="Theme"
          CssClass="w-100 me-2" 
          Data="_themes" 
          TextSelector="t => t.Name" 
          Nullable="true" 
          NullText="Havit.Blazor"
          @bind-Value="_theme"/>

<HeadContent>

    @if (_theme?.Name == "Bootstrap5")
    {
        @((MarkupString)HxSetup.RenderBootstrapCssReference(BootstrapFlavor.PlainBootstrap))
    }
    else if (_theme is not null) // null = HAVIT Bootstrap build (default)
    {
        <link href="@_theme.CssCdn" rel="stylesheet"/>
        ThemeService.SetSelectedThemeAsync(_theme);
    }
</HeadContent>